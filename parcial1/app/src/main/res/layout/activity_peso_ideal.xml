<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pesoIdeal">

    <TextView
        android:id="@+id/masaCorpTx2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora de Peso ideal"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/masaCorpCalTx2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:background="#FF8700"
        android:text="0"
        android:textSize="100sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/masaCorpTx2" />

    <TextView
        android:id="@+id/respCalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu peso corporal ideal es: "
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/masaCorpCalTx2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        android:layout_marginTop="16sp" />

    <TextView
        android:id="@+id/infoTx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:text="Ingrese 1 si es hombre, 2 si es mujer"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/respCalc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        />

    <EditText
        android:id="@+id/sexoImp"
        android:layout_width="321sp"
        android:layout_height="48sp"
        android:layout_marginTop="48dp"
        android:background="#D9D9D9"
        android:hint="Sexo"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoTx"/>


    <EditText
        android:id="@+id/altImp"
        android:layout_width="321sp"
        android:layout_height="48sp"
        android:layout_marginTop="48dp"
        android:background="#D9D9D9"
        android:hint="Altura en cm. Ejemplo: 168"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sexoImp"/>

    <Button
        android:id="@+id/calcBt2"
        android:layout_width="320sp"
        android:layout_height="55sp"
        android:layout_marginTop="28dp"
        android:text="Calcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/altImp" />

    <Button
        android:id="@+id/backBt2"
        android:layout_width="320sp"
        android:layout_height="55sp"
        android:layout_marginTop="28dp"
        android:text="Regresar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calcBt2" />

</androidx.constraintlayout.widget.ConstraintLayout>