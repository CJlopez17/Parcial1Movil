<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".masaCorporal">

    <TextView
        android:id="@+id/masaCorpTx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora de Masa Corporal IMC"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/masaCorpCalTx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:background="#FF8700"
        android:text="0"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/masaCorpTx" />

    <TextView
        android:id="@+id/respCalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu IMC es: "
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/masaCorpCalTx"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        android:layout_marginTop="16sp" />

    <EditText
        android:id="@+id/pesoImp"
        android:layout_width="321sp"
        android:layout_height="48sp"
        android:layout_marginTop="48dp"
        android:background="#D9D9D9"
        android:hint="Peso. Ejemplo: 60"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/respCalc"/>


    <EditText
        android:id="@+id/altImp"
        android:layout_width="321sp"
        android:layout_height="48sp"
        android:layout_marginTop="48dp"
        android:background="#D9D9D9"
        android:hint="Altura en metros. Ejemplo: 1.60"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pesoImp"/>

    <Button
        android:id="@+id/calcBt"
        android:layout_width="320sp"
        android:layout_height="55sp"
        android:layout_marginTop="28dp"
        android:text="Calcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/altImp" />

    <Button
        android:id="@+id/backBt"
        android:layout_width="320sp"
        android:layout_height="55sp"
        android:layout_marginTop="30dp"
        android:text="Regresar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calcBt"/>

</androidx.constraintlayout.widget.ConstraintLayout>